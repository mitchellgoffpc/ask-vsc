{
  "name": "ask-vsc",
  "displayName": "Ask",
  "description": "Ask an LLM to help you with your code",
  "version": "0.0.4",
  "repository": "https://github.com/mitchellgoffpc/ask-vsc",
  "publisher": "ask-vsc",
  "icon": "ask.png",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "ask.chat-view.focus",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "ask.ask",
        "key": "ctrl+m",
        "mac": "cmd-m"
      }
    ],
    "commands": [
      {
        "command": "ask.ask",
        "title": "Ask"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ask",
          "title": "Ask",
          "icon": "$(comment)"
        }
      ]
    },
    "views": {
      "ask": [
        {
          "type": "webview",
          "id": "ask.chat-view",
          "name": "Ask"
        }
      ]
    },
    "configuration": {
      "title": "Ask",
      "properties": {
        "ask.apiKeys.openAI": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        },
        "ask.apiKeys.mistral": {
          "type": "string",
          "default": "",
          "description": "Mistral API Key"
        },
        "ask.apiKeys.anthropic": {
          "type": "string",
          "default": "",
          "description": "Anthropic API Key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35",
    "diff": "^5.2.0"
  }
}
